/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.circle-button image{
  width:72rpx;
  height:72rpx;
}

.usermotto {
  margin-top: 200rpx;
}

.header{
  margin: 10rpx 0;
}

.line{
  width:90%;
  height:1rpx;
  background-color: rgba(0,0,0,.1);
}

.body{
  width: 100%;
  margin-top: 60rpx;
}

.button-group{
   display: flex;  
  width: 50%;
  float: right;
  margin-bottom: 50rpx;
  margin-right: 23rpx;
}


.circle-button{
  width:80rpx;
  height:80rpx;
  border-radius: 100%;
  border:1px solid rgba(0,0,0,.1);
  padding: 0rpx;
}

.weather-detail-container{
  display: flex;
  align-items: center;
  justify-content: center;
  width:90%;
  height:400rpx;
  margin: 0rpx auto;
  border:1px solid #ccc;
  border-radius: 10rpx;
}
.weather-detail-main{
  width:80%;
  display: flex;
  align-items: center;
}

.weather-detail-container text{
  display: block;
}

.weather-detail-main image{
  width:40%;
  height:149rpx;
  display: inline-block;
  padding: 23rpx 46rpx 23rpx 23rpx;
  border-right:1rpx solid #ccc
}
.weather-main-text-container{
  width:40%; 
  height:195rpx;
  display: inline-block;
  padding-left: 40rpx;
}
.week-weather-container{
  display: flex;
  width:90%;
  margin: 50rpx auto;
  height:300rpx;
  border:1px solid #ccc;
  background: 1px solid #ddd;
}

.week-weather-container image{
  width: 46rpx;
  height:46rpx;
  display: inline-block;
  margin-top: 30rpx;
}

.week-weather-container text{
  text-align: center;
  width:100%;
  /* display: block; */
}


.week-weather-item{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}